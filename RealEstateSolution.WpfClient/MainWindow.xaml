<Window x:Class="RealEstateSolution.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="房产管理系统" Height="800" Width="1200"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部导航栏 -->
        <materialDesign:ColorZone Mode="PrimaryMid" 
                                 Padding="16"
                                 materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Image Source="https://ai-public.mastergo.com/ai/img_res/149a3543927da3c58c6a9d93a8382373.jpg"
                           Height="32"/>
                    <StackPanel Orientation="Horizontal" Margin="24,0,0,0">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Content="首页"
                                Foreground="White"/>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Content="房源管理"
                                Foreground="White"/>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Content="客户管理"
                                Foreground="White"/>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Content="数据报表"
                                Foreground="White"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right">
                    <TextBox Width="200"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="搜索房源/客户"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Foreground="White"/>
                    <materialDesign:PopupBox StaysOpen="False" Margin="16,0,0,0">
                        <StackPanel>
                            <Button Content="个人信息"/>
                            <Button Content="系统设置"/>
                            <Separator/>
                            <Button Content="退出登录"/>
                        </StackPanel>
                    </materialDesign:PopupBox>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- 主要内容区域 -->
        <ContentControl Grid.Row="1" 
                       prism:RegionManager.RegionName="MainRegion"/>
    </Grid>
</Window>
